<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs6400.carshop.mapper.UserMapper">


    <select id="selectByUserName" resultType="com.cs6400.carshop.bean.RegularUser">
        select * from RegularUser where user_name = #{username}
    </select>


    <select id="selectOwner" resultType="String">
        select username from Owner where user_name = #{username}
    </select>
    <select id="selectSalePerson" resultType="String">
        select username from saleperson where user_name = #{username}
    </select>
    <select id="selectInventoryClerk" resultType="String">
        select username from inventoryclerk where user_name = #{username}
    </select>
    <select id="selectServiceWriter" resultType="String">
        select username from servicewriter where user_name = #{username}
    </select>
    <select id="selectManager" resultType="String">
        select username from manager where user_name = #{username}
    </select>


</mapper>